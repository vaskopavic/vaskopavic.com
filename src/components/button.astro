---
import type { HTMLTag, Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }>;

const { as: Tag, class: className, ...props } = Astro.props;
---

<Tag
  {...props}
  class:list={[
    "bg-emphasis dark:bg-emphasis-dark hover:bg-emphasis-hover hover:dark:bg-emphasis-hover-dark px-8 py-2 rounded-full text-lg text-center",
    className,
  ]}
>
  <slot />
</Tag>
