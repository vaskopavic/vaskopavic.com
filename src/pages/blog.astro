---
import Layout from "@/layouts/main.astro";
import Container from "@/components/container.astro";

const posts = (await Astro.glob("./blog/*.md")).sort(
  (a: any, b: any) =>
    new Date(b.frontmatter.createdAt).valueOf() -
    new Date(a.frontmatter.createdAt).valueOf()
);
---

<Layout title="Blog">
  <Container>
    <h1 class="text-5xl md:text-6xl text-center mb-4">Blog</h1>
    <div class="font-light text-justify mb-8">
      I write about things I'm learning, things I'm building, and things I'm
      thinking about.
    </div>
    <section>
      <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {
          posts.map((post) => (
            <li class="text-center mb-4">
              <a href={post.url}>
                <img
                  class="border border-slate-300 dark:border-zinc-700 rounded-xl"
                  src={post.frontmatter.thumbnail}
                  alt="Thumbnail image"
                />
                <div class="mt-3 text-xl">{post.frontmatter.title}</div>
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </Container>
</Layout>
